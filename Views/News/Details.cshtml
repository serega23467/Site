@model NewsItemModel

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>@Model.Title</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    </head>
    <body>
        <div class="container">
            <h1>@Model.Title</h1>

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                string path = $"/images/{Model.ImageUrl}";
                <img src="@path" alt="@Model.Title" style='width:max-content; margin-left:30%; margin-right:50%; margin-top:80px; margin-bottom:20px; height:500px; width:600px;' />
            }

            <p>@Model.Content</p>

            <a href="@Url.Action("Index", "News")" style="margin-top:50px" class="btn btn-primary">Назад к списку новостей</a>
        </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    </body>
</html>